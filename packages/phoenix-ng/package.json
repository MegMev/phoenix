{
  "name": "phoenix-ng",
  "version": "2.11.4",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:ssl": "ng serve --ssl --host 0.0.0.0",
    "start:single": "ng serve --configuration singleEvent",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:ui-components": "ng build phoenix-ui-components --configuration production",
    "test": "jest --no-cache",
    "test:coverage": "yarn test --coverage",
    "test:ci": "yarn test:coverage --maxWorkers=2 --silent",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "prettier": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore",
    "prettier:check": "yarn prettier --check .",
    "prettier:write": "yarn prettier --write .",
    "eslint": "eslint projects/**/*.ts --ignore-path ../../.gitignore",
    "eslint:fix": "yarn eslint --fix",
    "deploy": "mv ../../docs/api-docs ../../api-docs && yarn build:prod --output-path ../../docs --base-href \"/phoenix/\" && cp ../../docs/index.html ../../docs/404.html && mv ../../api-docs ../../docs/api-docs",
    "//": "Running tests only for phoenix-ui-components because of bug in phoenix-app tests",
    "version": "yarn deploy",
    "deploy:web": "yarn build:prod --output-path ./docs --base-href \"./\" && cp ./docs/index.html ./docs/404.html",
    "deploy:web:single": "ng build --configuration singleEvent --output-path ./docs --base-href \"./\" && cp ./docs/index.html ./docs/404.html"
  },
  "dependencies": {
    "@angular/animations": "^14.2.2",
    "@angular/cdk": "^14.2.2",
    "@angular/common": "^14.2.2",
    "@angular/compiler": "^14.2.2",
    "@angular/core": "^14.2.2",
    "@angular/forms": "^14.2.2",
    "@angular/material": "^14.2.2",
    "@angular/platform-browser": "^14.2.2",
    "@angular/platform-browser-dynamic": "^14.2.2",
    "@angular/router": "^14.2.2",
    "@rp3e11/ngx-slider": "^13.0.1",
    "css-element-queries": "^1.2.3",
    "cypress-plugin-snapshots": "^1.4.4",
    "phoenix-event-display": "^2.11.4",
    "phoenix-ui-components": "^2.11.4",
    "qrcode": "1.5.1",
    "rxjs": "^7.5.6",
    "three": "^0.144.0",
    "tslib": "^2.4.0",
    "zone.js": "^0.11.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.3",
    "@angular-devkit/build-ng-packagr": "~0.1002.0",
    "@angular/cli": "~14.2.3",
    "@angular/compiler-cli": "~14.2.2",
    "@angular/language-service": "^14.2.2",
    "@nrwl/jest": "^14.4.3",
    "@types/cypress": "^1.1.3",
    "@types/qrcode": "1.5.0",
    "concurrently": "^7.4.0",
    "cypress": "^10.8.0",
    "jest-preset-angular": "11.1.2",
    "ng-packagr": "^14.2.1"
  }
}
